{
  "name": "eurodoor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Eurodoor - Zamonaviy Eshiklar Katalogi va Buyurtma Tizimi",
  "keywords": [
    "eurodoor",
    "doors",
    "catalog",
    "ecommerce",
    "uzbekistan"
  ],
  "author": "Eurodoor Team",
  "scripts": {
    "dev": "vite",
    "dev:admin": "vite --config vite.admin.config.ts",
    "build": "tsc && vite build",
    "build:admin": "tsc && vite build --config vite.admin.config.ts",
    "build:analyze": "tsc && vite build --mode analyze",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "preview:admin": "vite preview --config vite.admin.config.ts",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "perf:test": "npm run build && npm run preview & sleep 5 && npm run lighthouse:ci"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-plugin-pwa": "^0.20.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "lighthouse": "^12.8.2",
    "@lhci/cli": "^0.13.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.10",
    "vite-bundle-analyzer": "^0.11.1",
    "web-push": "^3.6.7"
  },
  "overrides": {
    "rimraf": "^5.0.0",
    "intl-messageformat-parser": "^9.0.0"
  }
}
